extends layout

block content
  h1= title
  if (show)
    form(method='post')
      p Jaka jest twoja ulubiona pora roku?
        ul
          each item in data 
            li 
              label=item.title
              input(type='radio', name='quiz' value=item._id)
      input(type="submit", value="Zagłosuj")
      p Aby zobaczyć wyniki oddaj głos
  else 
    h1 Dokonałeś głosu w ankiecie
    h3 Wyniki głosowania:    
    ul
    each item in data
      li= `${item.title}: ${item.vote} (${(Math.round(item.vote * 100) / sum)}%)`
    p Głosów oddano #{sum} 


